@model WebApp.Models.Client

@{
    ViewData["Title"] = "AddNote";
}

<h1>Add a note for @Html.DisplayFor(model => model.BusinessName)</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label"></label>
                <textarea asp-for="DisplayName" class="form-control"></textarea>
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Note" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Details">Back to @Html.DisplayFor(model => model.BusinessName) Details</a>
</div>
