@model WebApp.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayNameFor(model => model.FullName)'s Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnumRoles)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnumRoles)
        </dd>
    </dl>
    <h3>Employee Notes</h3>
    <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Note" asp-action="Create" role="button">Add A new Note</a>
    <hr />
    <dl>
        @Html.DisplayFor(model => model.Notes)
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmpID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
